<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
  <!-- 指定一个文件目录，当EhCache把数据写到硬盘上时，将把数据写到这个文件目录下 -->
  <diskStore path="java.io.tmpdir"/>

  <!-- 设定缓存的默认数据过期策略 -->
  <defaultCache
      maxElementsInMemory="10000"
      eternal="false"
      overflowToDisk="true"
      timeToIdleSeconds="1200"
      timeToLiveSeconds="1800"
      diskPersistent="false"
      diskExpiryThreadIntervalSeconds="120"/>

  <cache name="columnCache"
         maxElementsInMemory="1000"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="1200"
         timeToLiveSeconds="1800"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="lineageCache"
         maxElementsInMemory="1000"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="1200"
         timeToLiveSeconds="1800"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="databaseCache"
         maxElementsInMemory="1000"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="1200"
         timeToLiveSeconds="1800"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="tablePageCache"
         maxElementsInMemory="1000"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="1200"
         timeToLiveSeconds="1800"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="columnPageCache"
         maxElementsInMemory="1000"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="1200"
         timeToLiveSeconds="1800"
         memoryStoreEvictionPolicy="LRU"/>

</ehcache>